<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".drivers.DashboardActivity"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Scrollable Content -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/background_event"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_gravity="center"
                    android:text="Driver Dashboard"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#172747"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </FrameLayout>

            <!-- Dashboard Cards -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginBottom="16dp">

                <!-- Total Bookings Today -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:background="@drawable/dashboard_card_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_car_icon"/>

                    <TextView
                        android:text="Today's Bookings"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#172747"/>

                    <TextView
                        android:id="@+id/tvTotalBookings"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#172747"/>
                </LinearLayout>

                <!-- Pending Bookings Today -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:background="@drawable/dashboard_card_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_car_icon"/>

                    <TextView
                        android:text="Pending Bookings"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#172747"/>

                    <TextView
                        android:id="@+id/tvPendingBookings"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#172747"/>
                </LinearLayout>

                <!-- Today's Earnings -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:background="@drawable/dashboard_card_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_today_earning"/>

                    <TextView
                        android:text="Today's Salary"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#172747"/>

                    <TextView
                        android:id="@+id/tvTodayEarnings"
                        android:text="₱0.00"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#172747"/>
                </LinearLayout>

                <!-- Weekly Earnings -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:background="@drawable/dashboard_card_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_weekly_earning"/>

                    <TextView
                        android:text="Cutoff Salary"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#172747"/>

                    <TextView
                        android:id="@+id/tvWeeklyEarnings"
                        android:text="₱0.00"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#172747"/>
                </LinearLayout>

                <!-- Completed Trips -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:background="@drawable/dashboard_card_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_total_trips"/>

                    <TextView
                        android:text="Completed Trips"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#172747"/>

                    <TextView
                        android:id="@+id/tvCompletedTrips"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#172747"/>
                </LinearLayout>

            </GridLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation (Scrollable) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:background="#172747">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Dashboard -->
            <LinearLayout
                android:id="@+id/navDashboard"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_dashboard"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dashboard"
                    android:textSize="12sp"
                    android:textColor="#FFFF00"/>
            </LinearLayout>

            <!-- Trips -->
            <LinearLayout
                android:id="@+id/navTrips"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_trips"
                    app:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trips"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- Requests -->
            <LinearLayout
                android:id="@+id/navRequests"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_request"
                    app:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requests"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- History -->
            <LinearLayout
                android:id="@+id/navHistory"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_history"
                    app:tint="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- Settings -->
            <LinearLayout
                android:id="@+id/navSettings"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_settings"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>