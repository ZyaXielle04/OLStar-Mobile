<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/font_white"
        android:layout_marginTop="20dp"
        android:padding="24dp">

        <!-- Amount Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <!-- Amount Input -->
        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter amount"
            android:inputType="numberDecimal"
            android:textColorHint="@color/grey"
            android:textColor="@color/grey"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="20dp" />

        <!-- Mileage -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Mileage Photo"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <Button
            android:id="@+id/btnMileage"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Upload Mileage Photo"
            android:layout_marginBottom="16dp" />

        <!-- Receipt -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gas Receipt Photo"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <Button
            android:id="@+id/btnReceipt"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:text="Upload Receipt Photo"
            android:layout_marginBottom="16dp" />

        <!-- GCash QR -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GCash QR Code"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <Button
            android:id="@+id/btnQr"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:text="Upload GCash QR"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>
